{
    "name": "personalfit-backend",
    "version": "1.0.0",
    "description": "PersonalFit Backend API - AI-powered fitness planner with accountability",
    "main": "dist/server.js",
    "scripts": {
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\"",
        "test": "dotenv -e .env.test -- jest --runInBand --passWithNoTests",
        "test:watch": "dotenv -e .env.test -- jest --watch --runInBand --passWithNoTests",
        "test:coverage": "dotenv -e .env.test -- jest --coverage --runInBand --passWithNoTests"
    },
    "keywords": [
        "fitness",
        "workout",
        "ai",
        "accountability"
    ],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^24.10.1",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "dotenv-cli": "^11.0.0",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "jest": "^30.2.0",
        "nodemon": "^3.1.11",
        "prettier": "^3.6.2",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-validator": "^7.3.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.19.4",
        "openai": "^6.9.0"
    }
}
